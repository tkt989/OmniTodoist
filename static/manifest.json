{
  "manifest_version": 2,
  "name": "Omni Todoist",
  "version": "1.0.1",
  "icons": {
    "16": "./img/app@16.png",
    "48": "./img/app@48.png",
    "128": "./img/app@128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "notifications",
    "identity",
    "storage",
    "https://todoist.com/*"
  ],
  "omnibox": {
    "keyword": "todo"
  }
}